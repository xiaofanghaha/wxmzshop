page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2;
}

.login-img {
  width: 750rpx;
}

/*表单内容*/

.login-from {
  margin-top: 20px;
  height: 100%;
}

.register {
  height: 100%;
  margin-top: 40rpx;
}

.top1 {
  display: flex;
  width: 200rpx;
  margin-left: 40rpx;
  align-items: center;
  justify-content: center;
}

.top1 text {
  font-size: 14px;
  display: flex;
  margin-left: 15rpx;
  opacity: 0.7;
}

.top2 {
  display: flex;
  margin-left: 240rpx;
  font-size: 12px;
}
.top3{
  height: 80rpx;
  display: flex;
  margin-left: 7%;
  margin-top: 10rpx;
  font-size: 27rpx;
  align-items: center;
  background-color: white;
  width: 86%;
}
.top {
  height: 112rpx;
  display: flex;
 margin-top: 10rpx;
  font-size: 27rpx;
  align-items: center;
  margin-left: 50rpx;
  background-color: white;
  width: 86%;
}

.inputView {
  background-color: #fff;
  line-height: 44px;
  width: 100%;
}

