.nameImage {
  width: 14px;
  height: 14px;
}

.loginLab {
  margin: 15px 15px 15px 10px;
  color: #545454;
  font-size: 14px;
}

.inputText {
  flex: block;
  float: right;
  text-align: right;
  margin-right: 22px;
  margin-top: 11px;
  color: rgb(27, 7, 7);
  font-size: 14px;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 1px;
}

/*按钮*/

.loginBtnView {
  display: flex;
  width: 100%;
  height: auto;
  background-color: #f2f2f2;
  margin-top: 20rpx;
  padding-bottom: 0px;
}

.loginBtn1{
  width: 100%;
  color: #000;
  background-color: black !important;
}
.yanBtn{
  color: #000;
  background-color: black !important;
}

.loginBtn {
  width: 80%;
  font-size: 34rpx;
  height: 80rpx;
  margin-bottom: 220rpx;
  background-color: black !important;
}

.back {
  width: 100%;
}

.swiper-tab {
  width: 100%;
  height: 75rpx;
  display: flex;
  margin-top: 34rpx;
  align-items: center;
  justify-content: center;

}

.swiper-item {
  color: #434343;
  font-size: 32rpx;
  display: flex;
  height: 100%;
  width: 380rpx;
  justify-content: center;
}

.active {
  color: rgba(21, 22, 22, 0.877);
}

swiper {
  background-color: #fff;
}
